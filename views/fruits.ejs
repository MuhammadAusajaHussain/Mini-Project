<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fruits Page</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4ec0d1496f.js" crossorigin="anonymous"></script>
</head>
<body class="flex flex-col h-screen">
    <%- include('./partials/header') %>

    <div class="flex-1 p-5">
        <div class="flex flex-row">
            <!-- User Statistics -->
            <div class="w-1/2 p-6">
                <div class="text-3xl font-bold text-gray-800 mb-4">Fruits Statistics</div>
                <div class="bg-white shadow-md rounded-lg p-6">
                    <div class="text-xl font-semibold mb-2">Total Fruits: <span class="text-blue-600"><%= fruits.length %></span></div>
                    <div class="text-lg mb-2"><span class="font-semibold">Average Price:</span> <span class="text-blue-600"><%= avgPrice %> Rupees/kg</span></div>
                    <div class="text-lg mb-2"><span class="font-semibold">Fruits in Season:</span> <span class="text-blue-600">
                        <% fruits.forEach(fruit => { %>
                            <% if (fruit.season === 'Winter') { %>
                                <%= fruit.name %>,
                            <% } %>
                        <% }) %>
                    </span></div>
                </div>
            </div>
            
            <!-- User Table -->
            <div class="w-1/2 p-6">
                <div class="text-3xl font-bold text-gray-800 mb-4">Current Fruits available</div>
                <div class="overflow-x-auto">
                    <table class="min-w-full text-center table-auto border border-black bg-white shadow-md rounded-lg overflow-hidden">
                        <thead class="bg-gray-200">
                            <tr class="text-lg border border-black">
                                <th class="py-2 px-4">Name</th>
                                <th class="py-2 px-4">Color</th>
                                <th class="py-2 px-4">Taste</th>
                                <th class="py-2 px-4">Season</th>
                                <th class="py-2 px-4">Price (Rupees per kg)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% fruits.forEach(fruit => { %>
                                <tr class="border-t border-black">
                                    <td class="py-2 px-4"><%= fruit.name %></td>
                                    <td class="py-2 px-4"><%= fruit.color %></td>
                                    <td class="py-2 px-4"><%= fruit.taste %></td>
                                    <td class="py-2 px-4"><%= fruit.season %></td>
                                    <td class="py-2 px-4"><%= fruit.pricePerKg %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>
</body>
</html>
